<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/storeIcon"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/store_icon"
        tools:ignore="ImageContrastCheck"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:fontFamily="@font/font"
        android:textColor="@color/fg_color"
        android:textSize="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/storeIcon"
        app:layout_constraintTop_toTopOf="@id/storeIcon"
        app:layout_constraintBottom_toBottomOf="@id/storeIcon"/>

    <ImageView
        android:id="@+id/reload"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/refresh"
        tools:ignore="ImageContrastCheck"
        app:layout_constraintEnd_toStartOf="@id/repo"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/repo"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        android:importantForAccessibility="no"
        app:srcCompat="@drawable/repo_icon"
        tools:ignore="ImageContrastCheck"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/storeIcon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>